<%- include('partials/header') %>
<div class="max-w-7xl mx-auto">
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 gap-4">
        <div>
            <h2 class="text-2xl lg:text-3xl font-extrabold text-gray-900">Employee Dashboard</h2>
            <p class="text-sm text-gray-500 mt-1">Active workforce monitoring for Unichem Ghana.</p>
        </div>
        <% if (user && user.role === 'admin') { %>
            <a href="/add-employee" class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white px-5 py-2.5 rounded-lg font-medium transition flex items-center justify-center shadow-md">
                <i class="fas fa-plus mr-2"></i> New Hire
            </a>
        <% } %>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100">
            <p class="text-xs font-medium text-gray-500 uppercase tracking-wider">Total Active Staff</p>
            <p class="text-3xl font-bold text-gray-900 mt-1"><%= employees.length %></p>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse min-w-[700px]">
                <thead class="bg-gray-50 text-slate-500 text-[10px] uppercase tracking-widest font-bold">
                    <tr>
                        <th class="px-6 py-4">Name</th>
                        <% if (user && user.role === 'admin') { %><th class="px-6 py-4">Age</th><% } %>
                        <th class="px-6 py-4">Department</th>
                        <th class="px-6 py-4">Contact</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% if(employees.length > 0) { %>
                        <% employees.forEach(emp => { %>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4">
                                    <div class="flex items-center">
                                        <div class="h-9 w-9 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold mr-3 flex-shrink-0">
                                            <%= emp.fullName ? emp.fullName.charAt(0) : '?' %>
                                        </div>
                                        <div class="text-sm font-medium text-gray-900 truncate max-w-[150px]"><%= emp.fullName %></div>
                                    </div>
                                </td>
                                <% if (user && user.role === 'admin') { %>
                                    <td class="px-6 py-4 text-sm text-gray-700"><%= emp.age %> yrs</td>
                                <% } %>
                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-1 text-[10px] font-bold rounded-full bg-slate-100 text-slate-600 uppercase">
                                        <%= emp.department %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500"><%= emp.email %></td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex justify-end items-center space-x-1">
                                        <% if (user && user.role === 'admin') { %>
                                            <a href="/employees/edit/<%= emp._id %>" class="text-gray-400 hover:text-amber-500 p-2"><i class="fas fa-pen-to-square"></i></a>
                                            <button onclick="openArchiveModal('<%= emp._id %>', '<%= emp.fullName %>')" class="text-gray-400 hover:text-red-600 p-2"><i class="fas fa-trash-can"></i></button>
                                        <% } %>
                                        <% if (emp.resume) { %>
                                            <a href="/uploads/<%= emp.resume %>" target="_blank" class="text-gray-400 hover:text-blue-600 p-2"><i class="fas fa-file-pdf"></i></a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="px-6 py-12 text-center text-gray-400">No active employees found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>