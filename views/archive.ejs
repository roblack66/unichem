<%- include('partials/header') %>

<div class="max-w-7xl mx-auto px-4">
    <div class="mb-10">
        <h2 class="text-3xl font-extrabold text-slate-900 tracking-tight">Personnel Archive</h2>
        <p class="text-slate-500 mt-2 italic">Historical records of previous Unichem staff members.</p>
    </div>

    <div class="bg-white rounded-2xl shadow-sm border border-slate-100 overflow-hidden">
        <table class="w-full text-left">
            <thead class="bg-slate-50">
                <tr>
                    <th class="px-8 py-4 text-xs font-bold text-slate-400 uppercase">Former Employee</th>
                    <th class="px-8 py-4 text-xs font-bold text-slate-400 uppercase">Department</th>
                    <th class="px-8 py-4 text-xs font-bold text-slate-400 uppercase">Status</th>
                    <th class="px-8 py-4 text-xs font-bold text-slate-400 uppercase text-right">Records</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-slate-50">
                <% if(archivedEmployees.length > 0) { %>
                    <% archivedEmployees.forEach(emp => { %>
                        <tr>
                            <td class="px-8 py-5">
                                <div class="text-sm font-bold text-slate-700 capitalize"><%= emp.fullName %></div>
                                <div class="text-xs text-slate-400"><%= emp.email %></div>
                            </td>
                            <td class="px-8 py-5">
                                <span class="text-xs font-medium px-2 py-1 bg-gray-100 text-gray-600 rounded">
                                    <%= emp.department %>
                                </span>
                            </td>
                            <td class="px-8 py-5">
                                <span class="text-xs font-semibold text-gray-400 flex items-center">
                                    <i class="fas fa-history mr-1.5"></i> Archived
                                </span>
                            </td>
                            <td class="px-8 py-5 text-right">
                                <a href="/uploads/<%= emp.resume %>" target="_blank" class="text-blue-500 hover:text-blue-700 text-sm font-medium">
                                    <i class="fas fa-file-pdf mr-1"></i> View CV
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="px-8 py-16 text-center text-slate-400 italic">No archived records found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>