<%- include('partials/header') %>

<div class="max-w-7xl mx-auto">
    <div class="mb-8">
        <h2 class="text-2xl lg:text-3xl font-extrabold text-gray-900">Archived Employees</h2>
        <p class="text-sm text-gray-500 mt-1">Personnel records moved to inactive status.</p>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse min-w-[700px]">
                <thead class="bg-gray-50 text-slate-500 text-[10px] uppercase tracking-widest font-bold">
                    <tr>
                        <th class="px-6 py-4">Name</th>
                        <th class="px-6 py-4">Department</th>
                        <th class="px-6 py-4">Archived Date</th>
                        <th class="px-6 py-4 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    <% if(archivedEmployees && archivedEmployees.length > 0) { %>
                        <% archivedEmployees.forEach(emp => { %>
                            <tr class="hover:bg-gray-50 transition">
                                <td class="px-6 py-4 font-medium text-gray-900">
                                    <%= emp.fullName %>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2.5 py-1 text-[10px] font-bold rounded-full bg-gray-100 text-gray-600 uppercase">
                                        <%= emp.department %>
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    <%= new Date(emp.updatedAt).toLocaleDateString() %>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <form action="/employees/unarchive/<%= emp._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Restore this employee to active status?')">
                                        <button type="submit" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-bold text-sm">
                                            <i class="fas fa-undo mr-2"></i> Resume Status
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-gray-400">
                                No archived records found.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-6">
        <a href="/" class="text-gray-500 hover:text-gray-700 text-sm font-medium">
            <i class="fas fa-arrow-left mr-1"></i> Back to Dashboard
        </a>
    </div>
</div>

